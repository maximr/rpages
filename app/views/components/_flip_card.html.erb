<div class="col-xs-6 col-lg-3 flip-card-col">
  <div class="icon-item-container">
    <div class="front">
      <span class="item-img">
        <%= render 'components/display_icon', image_url: image_url %>
      </span>
      <span class="item-head"><%= title %></span>
    </div>
    <div class="back">
      <span class="item-desc">
        <span class="item-head"><%= title %></span>
        <p>
          <%= description %>
        </p>
      </span>
    </div>
  </div>
</div>